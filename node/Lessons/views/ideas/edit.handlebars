

<div class="card card-body">
    <h3>新文章</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">标题</label>

            <!--required 前端控制-->
            <input type="text" class="form-control" name="title" value="{{idea.title}}" >
        </div>
        <div class="form-group">
            <label for="details">内容</label>
            <textarea class="form-control" name="details" rows="15">{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-parimary">确定</button>

    </form>

</div>